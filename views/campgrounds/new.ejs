<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Create a campground
		</h1>
		<div style="width:30%; margin: 30px auto">
			<form action = "/campgrounds" method = "POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Camp name" name = "name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price" name = "price" min="0.01" step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Camp image url" name = "image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text-area" placeholder="Camp Description" name = "description">
				</div><div class="form-group">
				<div class="form-group">
				<button class="btn btn-lg btn-primary">
					Submit!
				</button>
				</div>
			</form>
			<a href="/campgrounds">Calcel</a>
		</div>
	</div>
</div>

<%- include ("../partials/footer") %>