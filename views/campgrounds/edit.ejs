<%- include("../partials/header") %>
	<div class ="container">
	<div class="row">
			<h1 style="text-align:center">
				Edit <%= campground.name %>
			</h1>	
		<div style="width:30%; margin: 30px auto">
			<form class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<!-- <label>Campground Name</label> -->
					<input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name = "campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
				</div>
				<div class="form-group">
					<!-- <label>Image</label> -->
					<input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
				</div>
				<div class="form-group">
					<!-- <label>Description</label> -->
					<input  name="campground[description]" value="<%= campground.description %>" class="form-control" >	
				</div>
				<button class="btn btn-lg btn-warning btn-block" > Edit</button> 
			</form>
		</div>
	</div>



<%- include("../partials/footer") %>